<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="350dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:theme="@style/Theme.Paraparia.Dialog">

    <TextView
        android:id="@+id/tv_get_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informationen werden geladen..."
        android:layout_marginBottom="20dp"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/iv_get_info"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avd_connector"/>


    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Essen auswÃ¤hlen"
            android:textSize="20sp" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="320dp"
            android:text="@string/gen_breakfast" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="320dp"
            android:text="@string/gen_lunch" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="320dp"
            android:text="@string/gen_dinner" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:id="@+id/ll_update"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <View
            android:alpha="0.6"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/white"/>
        <CheckBox
            android:id="@+id/cb_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:checked="true"
            android:text="@string/dialog_noti_opt__cb_update_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:fontFamily="@string/font_family_medium"
            android:text="Abbrechen"
            android:visibility="visible"
            android:textColor="@color/teal_500" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:fontFamily="@string/font_family_medium"
            android:text="Speichern"
            android:visibility="gone"
            android:textColor="@color/teal_500" />
    </LinearLayout>
</LinearLayout>